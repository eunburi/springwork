package aop_p.adv;

import java.util.Arrays;

import org.aspectj.lang.ProceedingJoinPoint;

public class FishAdvice {

	Object fishTest(ProceedingJoinPoint joinPoint) {
		Object res = null;
		
		System.out.println(" >> fishTest 진입:"+joinPoint.getSignature().toShortString());
		System.out.println(" >> getArgs():"+Arrays.toString(joinPoint.getArgs()));
		
		
		
		
		try {
			
			if(joinPoint.getArgs().length>=2) {
				joinPoint.getArgs()[1] = "엄마상어";
				System.out.println(" >>변경한 getArgs():"+Arrays.toString(joinPoint.getArgs()));
			}
			
			res = joinPoint.proceed();
			
			if(res.equals("애봉")) {
				res = "조준";
			}
		} catch (Throwable e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		System.out.println(" >> arTest 완료");
		return res;
	}
}
